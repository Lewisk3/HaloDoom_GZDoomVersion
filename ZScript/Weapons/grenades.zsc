class FragGrenadeExplosion : CheapActor
{	
	Default
	{
		Scale 1.0;
		Alpha 0.8;
		Damage 120;
	}
	
	States
	{
		Spawn:
			TNT1 A 0;
			TNT1 A 1 
			{
				Spawn("LargeSplashSpawner", pos);
				let shockwave = Spawn("FX_Shockwave", pos);
				if(shockwave) shockwave.alpha = 0.5;
				
				let sparks = Spawn("ImpactSparks", pos);
				if(sparks) sparks.A_SetScale(1.0);
				
				let flare = Spawn("TankRocket_Flare", (pos.xy, pos.z+20));
				if(flare) flare.A_SetScale(0.75);
				
				A_QuakeEx(2,2,2,10,0,1024);
			}
			SX04 ABCD 1 Bright;
			TNT1 A 0 
			{
				vector3 fxpos = (pos.xy, pos.z+40);
				HaloMath.SpawnFX("FragGrenade_FlyingExplosion", fxpos, angle, random[FragRNG](5,12), 10, 20, 180,45, 25);
				A_Explode(damage, 256);
			}
			SX04 EFGHIJKLMNOPQ 1 Bright
			{
				vector3 fxpos = (pos.xy, pos.z+20);
				if(!(frame%2))
					HaloMath.SpawnFX("FragGrenade_Smoke", fxpos, angle, 1, 20, 20, rstyle:STYLE_Subtract);
			}
		stop;
	}
}


// Plasma Grenade
class PlasmaGrenade_Proj : HaloGrenade_Proj
{
	Actor hitactor;
	bool onfloor;
	bool onceiling;
	vector3 hitoffs;
	
	Default
	{	
		Projectile;
		Gravity 0.67;
		+ROLLSPRITE;
		
		-NOGRAVITY;
		Speed 40;
		
		Radius 5;
		Height 5;
		Scale 0.08;
	}	
	
	virtual void StickToActor(Actor targ)
	{
		vector3 followPos = HaloMath.V3Offset(targ.angle, targ.pitch, targ.roll, hitoffs.x * 0.25, hitoffs.y * 0.25, hitoffs.z, 1.0);
		followPos = level.Vec3Offset(targ.pos, followPos);
		SetOrigin(followPos, true);
	}
	
	virtual bool ShouldStick()
	{
		return true;
	}
	
	override void Tick()
	{
		super.Tick();
		
		if(!bMISSILE && !bNOGRAVITY)
		{
			onfloor = (pos.z <= floorz);
			onceiling = (pos.z >= ceilingz);
			if(ShouldStick()) 
			{
				bNOGRAVITY = true;
				vel *= 0;
				SetState(FindState("Death"));
			}			
		}		
		
		let smoke = Spawn("PlasmaGrenade_Trail", pos);
		if(smoke) 
		{
			smoke.A_SetScale(0.15);
			if(!bMISSILE)
			{
				smoke.vel.z = 1;
				smoke.vel.xy = (1,1) * frandom[PlasGrenTrail](-1.0,1.0);
			}
		}
		
		if(waterlevel > 0)
		{
			vel.xy *= 0.9;
			A_SetGravity(default.gravity * 0.75);
			
			if(!InStateSequence(CurState, FindState("Death"))) 
				SetState(FindState("Death"));
		}

		if(onfloor || onceiling) 
		{
			double toz = onfloor ? floorz : onceiling ? ceilingz : pos.z;
			SetOrigin((pos.xy, toz), true);
		}
				
		if(hitactor) 
			StickToActor(hitactor);
	}
	
	override int SpecialMissileHit(Actor victim)
	{
		if(!victim.bSHOOTABLE) return -1;
		if(hitactor) return -1;
		if(victim == target) return 1;
		if(!victim.CanCollideWith(self, false)) return 1;
		
		if( !hitactor && ShouldStick() )
		{
			vel *= 0;
			hitactor = victim;
			hitoffs = HaloMath.DiffToLocal(pos, victim.pos, (victim.angle, victim.pitch));
		}
		
		return -1;
	}
	
	virtual void DoExplode()
	{
		let expl = Spawn("PlasmaGrenadeExplosion", pos);
		if(expl) expl.target = target;
	}
	
	States
	{
		Spawn:
			PLGN A 1
			{
				roll += 5;
			}
		loop;
		
		Crash:
		XDeath:
		Death:
			PLGN A 70 
			{
				A_StartSound("Halo/Grenade/Plasma/Armed"); 
				A_AlertMonsters(128);
			}
		Detonate:
			TNT1 A 1
			{
				if(waterlevel > 0 || HitWater(CurSector, pos))
					A_StartSound("Halo/Grenade/Plasma/ExplodeWater");
				else
					A_StartSound("Halo/Grenade/Plasma/Explode");
					
				DoExplode();
			}
		stop;
	}
}
