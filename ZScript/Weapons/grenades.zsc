class FragGrenade_Proj : HaloGrenade_Proj
{
	Default
	{	
		BounceType "Doom";
		BounceCount 2;
		+BOUNCEONWALLS;
		+BOUNCEONFLOORS;
		+BOUNCEONCEILINGS;
		+USEBOUNCESTATE;
		BounceFactor 0.6;
		Projectile;
		Gravity 0.67;
		+ROLLSPRITE;
		
		-NOGRAVITY;
		Speed 20;
		
		Radius 3;
		Height 3;
		Scale 0.08;
	}	
	
	override int SpecialMissileHit(Actor victim)
	{
		int res = super.SpecialMissileHit(victim);
		if(res != 1) 
		{
			let pain = victim.FindState("Pain");
			if(pain) victim.SetState(pain);
		}
		
		return -1;
	}
	
	override void Tick()
	{
		super.Tick();
		
		if(waterlevel > 0)
		{
			vel.xy *= 0.9;
			A_SetGravity(default.gravity * 0.75);
			
			if(!InStateSequence(CurState, FindState("Death"))) 
				SetState(FindState("Death"));
		}
	}
	
	States
	{
		Spawn:
			FRAG A 1
			{
				roll += 5;
			}
		loop;
		
		Bounce:
			FRAG A 1 
			{
				A_StartSound("Halo/Grenade/Frag/Bounce");
				roll -= 20;
			}
		goto Spawn;
		
		Crash:
		XDeath:
		goto Death;
		
		Death:
			FRAG A 28; 
		Detonate:
			TNT1 A 1
			{
				if(waterlevel > 0 || HitWater(CurSector, pos))
					A_StartSound("Halo/Grenade/Frag/ExplodeWater");
				else
					A_StartSound("Halo/Grenade/Frag/Explode");
					
				Spawn("FragGrenadeExplosion", pos);
			}
		stop;
	}
}
