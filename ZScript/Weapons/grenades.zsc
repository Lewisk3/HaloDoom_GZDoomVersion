class PlasmaGrenadeExplosion : CheapActor
{	
	double explosionRadius, explosionDmg;
	Property SetupExplosion : explosionDmg, explosionRadius;
	
	Default
	{
		Scale 1.0;
		Alpha 0.8;
		DamageType "PlasmaExplosion";
		Translation "0:255=@60[24, 180, 237]";
		
		PlasmaGrenadeExplosion.SetupExplosion 255, 256;
	}
	
	States
	{
		Spawn:
			TNT1 A 0;
			TNT1 A 1 
			{
				Spawn("PlasmaSplashSpawner", pos);
				Spawn("LargeSplashSpawner", pos);
				vector3 fxpos = (pos.xy, pos.z+20);
				HaloMath.SpawnFX("PlasmaGrenade_Smoke", fxpos, angle, 20, 20, 20, frandom[SFX](0,360), frandom[SFX](-30,30), frandom[SFX](-3, 3));
				HaloMath.SpawnFX("WraithPlasma_FlyingPlasma", fxpos, angle, random[SFX](5,12), 10, 20, 180,45, 12);
				
				let shockwave = Spawn("FX_Shockwave", pos);
				if(shockwave) 
				{
					shockwave.alpha = 0.5;
					shockwave.A_SetScale(shockwave.Scale.X * Scale.X);
				}
				
				let flare = Spawn("TankRocket_Flare", (pos.xy, pos.z+30));
				if(flare)
				{
					flare.A_SetRenderStyle(1.0, STYLE_AddShaded);
					flare.SetShade(0xFF18B4ED);
					flare.A_SetScale(0.75 * Scale.X);
				}
				
				A_QuakeEx(2,2,2,20,0,1024);
			}
			TNT1 A 0 
			{
				HaloMath.ExplodeEx(self, explosionDmg, explosionRadius, thrustMod:0.25, damagetype:damagetype, selfDamage:0.1);
			}
			SX04 ABCDEFGHIJKLMNOPQ 1 Bright;
		stop;
	}
}
