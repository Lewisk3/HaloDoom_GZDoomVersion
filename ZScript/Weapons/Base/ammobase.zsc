mixin class WorldAmmoBehavior
{
	// Man, Mixins are really a god send for Ammo-based actors.
	override bool SpecialDropAction (Actor dropper)
	{
		if(dropper is "PlayerPawn") return false;
		
		// Only keep dropped ammo 75% of the time.
		if(random[WorldDroppedAmmo](0,100) < 75)
		{
			GoAwayAndDie();
		}
		return false;
	}
}